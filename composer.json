{
    "name": "amber/common",
    "description": "Common Amber Project files.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi Pe√±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.0",
        "nesbot/carbon": "^1.22",
        "league/flysystem": "^1.0",
        "amber/collection": "^0.2.5@beta",
        "amber/phraser": "dev-master"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "dev-master",
        "phpunit/phpunit": "^6.5|^7.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "test": "phpunit --verbose --coverage-html ./tmp/coverage/",
        "docs": "phpdoc -d ./src -i Tests/ -t ./tmp/docs/api",
        "sniff": "phpcs --standard=PSR12 ./src",
        "fix-cs": "phpcbf --standard=PSR12 ./src",
        "pull": [
            "git pull",
            "composer update"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
